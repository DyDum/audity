<RulesCIS>
    <Rule id="3.3.1">
        <BasePath>/etc/sysctl.conf</BasePath>
        <FileName>sysctl.conf</FileName>
        <NonCompliantComment>
            IP forwarding is enabled, which may unintentionally route traffic between networks.
        </NonCompliantComment>
        <CorrectiveComment>
            Disable IP forwarding by setting net.ipv4.ip_forward to 0.
        </CorrectiveComment>
        <Correction>
            echo 'net.ipv4.ip_forward = 0' >> /etc/sysctl.conf; sysctl -p
        </Correction>
        <Verification>
            sysctl -n net.ipv4.ip_forward | grep -q '^0$' && echo 0 || echo 1
        </Verification>
        <Manual>NO</Manual>
    </Rule>
    <Rule id="3.3.2">
        <BasePath>/etc/sysctl.conf</BasePath>
        <FileName>sysctl.conf</FileName>
        <NonCompliantComment>
            Packet redirect sending is enabled, potentially allowing malicious route manipulation.
        </NonCompliantComment>
        <CorrectiveComment>
            Disable packet redirect sending by setting net.ipv4.conf.all.send_redirects to 0.
        </CorrectiveComment>
        <Correction>
            echo 'net.ipv4.conf.all.send_redirects = 0' >> /etc/sysctl.conf; sysctl -p
        </Correction>
        <Verification>
            sysctl -n net.ipv4.conf.all.send_redirects | grep -q '^0$' && echo 0 || echo 1
